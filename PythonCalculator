def Calculator(input, values):
    
    import math

    if input == "Add":
        Add(values)

    elif input == "Subtract":
        Subtract(values)
    elif input == "Divide":
        Divide(values)
    elif input == "Multiply":
        Multiply(values)
    elif input == "Mode":
        Mode(values)
    elif input == "Mean":
        Mean(values)
    elif input == "Median":
        Median(values)
    elif input == "Power":
        Power(values)
    else:
        print "You must input at least two values."

def Add(values):
    '''
    Adds two numbers together and returns result
    input: float value1, float value2
    return: float
    '''
    result = 0 
    for val in values: 
        if type (val) == 'int' or type (val) == 'float':
            result += val
        else: print "No. That is a no. You must input a float or integer value.", val
        
    return result

def Subtract(values):
    '''
    Adds two numbers together and returns result
    input: float value1, float value2
    return: float
    '''
    result = 0 
    for val in values: 
        if type (val) == 'int' or type (val) == 'float':
            result -= val
        else: print "No. That is a no.", val
        
    return result


