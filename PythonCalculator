def Mean(values):
    '''
    finds the average of a sequence of numbers
    '''
    sum = 0 
    result = 0

    for val in values: 
        if type (val) == 'int' or type (val) == 'float':
            sum += val
            result = float(sum/len(values))
        else: print "No. That is a no.", val
        
    return result

def Median(values):
'''
Finds the median in a list of numbers
'''
    

    median = 0
    sum = len(values)/2
    sum = int(math.ceil(sum)) 
    median = values[sum]
    
    return median

